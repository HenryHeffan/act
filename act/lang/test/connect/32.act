defproc and22 (bool a[2][2]; bool c[2]){
	prs{
		~a[0][0] | ~a[0][1] -> c[0]+
		 a[0][0] &  a[0][1] -> c[0]-
		~a[1][0] | ~a[1][1] -> c[1]+
		 a[1][0] &  a[1][1] -> c[1]-	
	}
}

defproc foo(bool a22[4][4], c2[4]) {
  (i:0..1: and22 and22[i..i](a22[2*i..2*i+1][2*i..2*i+1], c2[2*i..2*i+1]);) 
}

foo x;
